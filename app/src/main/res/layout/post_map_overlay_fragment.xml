<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:clickable="true"
    android:focusable="true">

    <!--<ImageView-->
    <!--android:id="@+id/post_map_background"-->
    <!--android:layout_width="384dp"-->
    <!--android:layout_height="115dp"-->
    <!--android:background="@android:color/background_light"-->
    <!--android:scaleType="fitXY"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--tools:layout_editor_absoluteY="0dp"-->
    <!--tools:srcCompat="@android:color/background_light" />-->

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="@string/default_date"
        android:textSize="@dimen/post_ui_font_size"
        android:textColor="@color/gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/usernameTextview"
        app:layout_constraintStart_toEndOf="@id/usernameTextview" />

    <TextView
        android:id="@+id/usernameTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/post_ui_margin"
        android:layout_marginStart="@dimen/post_ui_margin"
        android:layout_marginTop="@dimen/post_ui_margin"
        android:text="@string/default_username"
        android:textSize="@dimen/post_ui_font_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/postContentTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/post_ui_margin"
        android:layout_marginEnd="@dimen/post_ui_margin"
        android:layout_marginStart="@dimen/post_ui_margin"
        android:ellipsize="middle"
        android:padding="0dp"
        android:text="@string/default_post_content"
        android:textColor="@color/black"
        android:textSize="@dimen/post_ui_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextview" />


</android.support.constraint.ConstraintLayout>