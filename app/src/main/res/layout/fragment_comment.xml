<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_txt"
            android:layout_marginTop="0dp"
            android:text="Yes I will replace this with real comments later.  Yes I will replace this with real comments later.  Yes I will replace this with real comments later.  Yes I will replace this with real comments later.  Yes I will replace this with real comments later. "
            android:textAppearance="@android:style/TextAppearance" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/message_txt"
            android:layout_below="@+id/message_txt"
            android:text="5h"
            android:textAppearance="@android:style/TextAppearance" />

    </RelativeLayout>

</RelativeLayout>